<!-- app/views/pages/home.html.erb -->
<section class="container">
  <p>
    Placeholder text for short description of what The Well is and what can be found on this Home page.
  </p>
  <h2 class="section-title">Recent Updates</h2>
  <div class="post-grid">
    <% @posts.each do |post| %>
      <div class="post-card">
        <h3><%= post.title %></h3>
        <p><%= truncate(post.content, length: 150) %></p>
        <p class="post-date"><em><%= post.created_at.strftime("%B %d, %Y") %></em></p>

        <% if post.external_url.present? %>
          <p><%= link_to "View Event", post.external_url, target: "_blank", class: "btn-eventbrite" %></p>
        <% end %>

        <% if post.user %>
          <p class="post-author">
            Posted by <%= post.user.name || post.user.email %>
          </p>
        <% end %>

        <% if user_signed_in? && current_user.admin? %>
          <%= link_to "Edit", edit_post_path(post), class: "edit-post-button" %>
          <%= button_to "Delete", post_path(post), method: :delete,
                data: { confirm: "Are you sure you want to delete this post?" },
                class: "delete-post-button" %>
        <% end %>
      </div>
    <% end %>
  </div>
</section>