<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title, style: "display: block", class: "subtitle" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :content, style: "display: block", class: "subtitle" %>
    <%= form.textarea :content, class: "form-control", rows: 8 %>
  </div>

  <div class="form-group">
    <%= form.label :external_url, "External URL (Eventbrite link)" %>
    <%= form.text_field :external_url, class: "form-control" %>
  </div>

  <div>
    <%= form.submit "Save", class: "btn-custom-primary" %>
  </div>
<% end %>
