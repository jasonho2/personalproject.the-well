<div class="container">

  <h2>All Member Emails</h2>

  <% if current_user&.admin? %>
    <textarea rows="10" cols="80" readonly onclick="this.select()">
  <%= Member.pluck(:email).join(", ") %>
    </textarea>
    <p>Click the box to copy all emails. Paste into your BCC field.</p>
  <% else %>
    <p>You are not authorized to view this page.</p>
  <% end %>
  
</div>